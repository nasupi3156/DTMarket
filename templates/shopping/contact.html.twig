<!DOCTYPE html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <link href="{{constant('shopping\\Bootstrap::APP_URL')}}css/header.css" rel="stylesheet" type="text/css" />
    <link href="{{constant('shopping\\Bootstrap::APP_URL')}}css/sidebar.css" rel="stylesheet" type="text/css" />
    <link href="{{constant('shopping\\Bootstrap::APP_URL')}}css/contact.css" rel="stylesheet" type="text/css" />
    <link href="{{constant('shopping\\Bootstrap::APP_URL')}}css/footer.css" rel="stylesheet" type="text/css" />

    <script src="{{constant('shopping\\Bootstrap::APP_URL')}}js/logout.js"></script>
    <title>profile</title>
   
  </head>
  <body>
    {% include 'header.html.twig' %}
   
  <section class="my-5">
    <div class="container">
      <div class="row">
        
        {% include 'sidebar.html.twig' %}
        
         <div class="col-12 col-md-9 Entire">
          <div class="border p-4">
            <div class="contact mb-4">
              <h3>お問い合わせ</h3>
            </div>
              <form action="contact.php" method="post">
                <div class="form-group mb-3">                
                  <div class="contact_name_data">             
                    <label for="family_name" class="contact_name mb-2">お名前(氏名)<span style="color:red;">*</span></label>                  
                      <input type="text" class="contact_family" id="family_name" name="family_name" value={{ dataArr.family_name }}>
                       {% if errArr.family_name | length > 0 %}
                        <p class="color">{{ errArr.family_name }}</p>
                      {% endif %}
                      <input type="text" class="contact_first mb-2" id="family_name" name="first_name" value={{ dataArr.first_name }}>
                    
                      {% if errArr.first_name | length > 0 %}
                        <p class="color">{{ errArr.first_name}}</p>
                      {% endif %}
                  </div>
                  <div class="form-group mb-3">
                    <div class="contact_email_data">
                      <label for="email" class="contact_email mb-2">メールアドレス <span style="color:red;">*</span></label>
                      <input type="email" class="contact_email_form mb-2" mb-2" id="email" name="email"  value={{ dataArr.email }}>
                        {% if errArr.email | length > 0 %}
                          <p class="color">{{ errArr.email }}</p>
                        {% endif %}
                        {% if duplicateEmail %}
                          <p class="color">こちらのメールアドレスは既に使用されています。</p>
                        {% endif %}
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="contact_data">
                      <label for="contents" class="contacts mb-2">お問い合わせ内容 <span style="color:red;">*</span></label>
                      <textarea class="contact_form mb-2" id="contents" name="contents" rows="5">{{ dataArr.contents }}</textarea>

                        {% if errArr.contents | length > 0 %}
                          <p class="color">{{ errArr.contents }}</p>
                        {% endif %}
                    </div>
                  </div>
                  <div class="d-flex justify-content-center click">
                  <button type="submit" name="send" class="btn btn-outline-success btn-custom mb-3">送信</button>
                  </div>
              
            </form>
          </div>
        </div>
      </div>
      {# row #}
    </div>
    {# container #}
  </section> 

  {% include 'footer.html.twig' %}

  <script src="{{ constant('shopping\\Bootstrap::APP_URL') }}js/contact.js"></script>
 
  </body>
</html>
